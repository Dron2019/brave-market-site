block meta
    title= title_page
    meta(name='description' content='')
block head
    link(rel='stylesheet' href="./assets/styles/main.min.css")
block scripts
    script(defer src='./assets/scripts/vendors.bundle.js')
    script(defer src='./assets/scripts/location.bundle.js')
block content
    .container.news-front-screen
        include ../includes/breadcrumbs.pug
        .text-style-1920-h-1.text-uppercase.color-send.news-front-screen__title Як дістатися
        .news-filter-label 
            .news-filter-label__text Фільтр
            .news-filter-label__line
        .tabs(data-location-tabs)
            .tabs__tab(data-location-tab="transport") Громадський транспорт
            .tabs__tab(data-location-tab="auto") Авто
        .news-filter-label 
            .news-filter-label__text
            .news-filter-label__line
    .container.location-transport-container(data-location-container="transport")
        each val in cardsInfo
            .location-card
                .location-card__img-wrap
                    .location-card__img
                        img(src=val['img'])
                .location-card__title= val['title']
                .location-card__text
                    each item in val['textItems']
                        .location-card__text-item
                            <svg width="24" height="24" viewBox="0 0 24 24" fill="none" xmlns="http://www.w3.org/2000/svg">
